{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="post">question</label>
      {{textarea value=post id="post"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>
    <button {{action 'saveQuestion'}}>Add!</button>
  </form>
</div>

{{else}}
<button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
