{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label  class= "ans" for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div  class= "ans" class="form-group">
      <label for="post">question</label>
      {{textarea value=post id="post"}}
    </div>

    <div  class= "ans" class="form-group">
      <label for="notes">Notes</label>
      {{input value=notes id="notes"}}
    </div>
    <button class= "btn" {{action 'saveQuestion'}}>Add!</button>
  </form>
</div>

{{else}}
<button class= "btn" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
