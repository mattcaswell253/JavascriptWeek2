{{#if addNewAnswer}}
<h1>Answer!</h1>
<div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="answer">Answer</label>
        {{input value=answer id="answer"}}
      </div>
      <button {{action 'saveAnswer'}}>Submit</button>
    </form>
  </div>
  {{else}}
  <button {{action 'answerFormShow'}}>Add Answer</button>
  {{/if}}
