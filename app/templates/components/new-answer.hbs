{{#if addNewAnswer}}
<h1>Answer!</h1>
<div>
    <form>
      <div class="form-group">
        <label class= "ans" for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label class= "ans" for="answer">Answer</label>
        {{textarea value=answer id="answer"}}
      </div>
      <button class= "ans" {{action 'saveAnswer'}}>Submit</button>
    </form>
  </div>
  {{else}}
  <button class= "btn"{{action 'answerFormShow'}}>Add Answer</button>
  {{/if}}
